<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>What Are The Odds</title>

  <!-- STYLESHEETS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/main.css">

  <!-- VENDOR SCRIPTS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- APPLICATION SCRIPTS -->
  <script src="js/app.js"></script>

</head>
<body>
  <div class="jumbotron">
    <div class="rules">
      <h1>What Are The Odds?</h1>
      <p>
        <a href="/rules"><button class="btn btn-primary btn-lg" id="rules" >Learn How To Play</button></a>
      </p>
    </div>
  </div>

  <nav>
    <ul class="nav nav pills nav-justified" id="navbar">
      <li><a href="/">Play</a></li>
      <li><a href="public-feed">Friends Games</a></li>
      <li><a href="/private-feed">Your Games</a></li>
      <li><a href="/login">Login</a></li>
      <li><a href="/sign-up">Sign-Up</a></li>
    </ul>
  </nav>
</div>


<div class = "all-inputs"> 

  <!--Player 1 Name Input -->
  <div class = "row">

    <div class="col-sm-12">
      <h2> Player 1: Type Your Name
      </h2>
    </div>


    <div class="col-sm-12">
      <div class="input-group input-group-lg">
        <span class="input-group-one" ></span>
        <input type="text"id="player-one-input" class="form-control" placeholder="Player 1 Name">
      </div>

      <div class="col-sm-12" id = "inputs">
        <h2> Player 2: Type Your Name
        </h2>
      </div>

      <!--Player 2 Name Input -->
      <div class="col-sm-12">
        <div class="input-group input-group-lg">
          <span class="input-group"></span>
          <input type="text" id="player-two-input" class="form-control" placeholder="Player 2 Name">
        </div> 

        <div class="col-sm-12" id = "inputs">
          <h2> Player 1: Type The Dare
          </h2>
        </div>

        <!--Player 1 Inputs The Dare/Challenge -->
        <div class="col-sm-12">

          <div class="input-group input-group-lg">
            <span class="input-group"></span>
            <input type="text" id="dare" class="form-control" placeholder="Player 1. What do you challenge Player 2 to?" aria-describedby="sizing-addon1">
          </div>

          <div class="col-sm-12" id = "inputs">
            <h2> Player 2: Choose The Odds
            </h2>
          </div>

          <!--Player 2 States the Odds of The Game  EX. 1/50 -->
          <div class="col-sm-12">
            <div class="input-group input-group-lg">
              <span class="input-group"></span>
              <input type="number" id="odds" class="form-control" placeholder="What Are The Odds?" aria-describedby="sizing-addon1">
            </div>

            <div class="col-sm-12" id = "inputs">
              <h2> Player 1: Select A Number
              </h2>
            </div>      

            <!--Player 1 Selects Their Number (crypted) -->
            <div class="col-sm-12" >
              <div class="input-group input-group-lg">
                <span class="input-group"></span>
                <input type="password" id="player-one-number" class="form-control" required = "required" placeholder="Player 1 Number Choice" aria-describedby="sizing-addon1">
              </div>

              <div class="col-sm-12" id = "inputs">
                <h2> Player 2: Select A Number
                </h2>
              </div>

              <!--Player 2 Selects Their Number (crypted) -->
              <div class="col-sm-12">
                <div class="input-group input-group-lg">
                  <span class="input-group"></span>
                  <input type="password" id="player-two-number" class="form-control" required = "required" placeholder="Player 2 Number Choice" aria-describedby="sizing-addon1">
                </div>

                <!--Play The Game BUTTON-->
                <div class="col-sm-4 col-sm-offset-4" >
                  <div class="btn-group btn-group-lg" role="group" aria-label="...">
                    <button type="button" id="play-the-game" class="btn btn-default">Play</button>
                  </div>
                </div>


                <!--Player One Loses-->
                <div class = "row">
                  <div class="col-sm-12">
                    <h3>
                      <div class="alert alert-success" id ="loserOne" role="alert" style = "display:none">
                      </div>
                    </h3>
                  </div>
                </div>

                <!--Player Two Loses-->
                <div class = "row">
                  <div class="col-sm-12">
                    <h3>
                      <div class="alert alert-success" id ="loserTwo" role="alert" style = "display:none">
                      </div>
                    </h3>
                  </div>
                </div>


                <!--Tie-->
                <div class = "row">
                  <div class="col-sm-12">
                    <h3>
                      <div class="alert alert-success" id ="tie" role="alert" style = "display:none">
                      </div>
                    </h3>
                  </div>
                </div>

                <!--FILE UPLOAD-->
                <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
                  <div class="form-group">
                    <p class="help-block">Upload a photo to embaress the loser.</p>
                    <label for="exampleInputFile"></label>
                    <input type="file" id="exampleInputFile">
                  </div>
                </div>
              </div>


              <!--Upload to Odds Feed BUTTON -->
              <div class="col-sm-12">
                <div class="btn-group btn-group-lg" role="group" id="upload" aria-label="...">
                  <button type="button" class="btn btn-default">Upload to Odds Feed</button>
                </div>
              </div>

            </body>
            </html>


